# EditorConfig helps maintain consistent coding styles across various editors and IDEs
# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88  # Match Black formatter

[*.{md,markdown}]
trim_trailing_whitespace = false  # Trailing whitespace is significant in Markdown

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{ps1,sh}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
