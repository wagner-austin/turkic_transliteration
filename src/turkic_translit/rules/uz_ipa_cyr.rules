# Uzbek (Cyrillic) → IPA (uz_ipa_cyr.rules)
# Covers standard Uzbek Cyrillic letters (Ў for oʻ, Ғ for gʻ). Russian-only letters kept minimal.

# --- Macros ---------------------------------------------------------------
$V = [А Е Ё И О Ў У Э Ю Я а е ё и о ў у э ю я] ;

# --- Digraphs / multi-letter sequences ------------------------------------
нг > ŋ ;   НГ > ŋ ;   Нг > ŋ ;   нГ > ŋ ;     # ‹нг› commonly /ŋ/ in Uzbek
тс > t͡s ; ТС > t͡s ;
ч > t͡ʃ ;  Ч > t͡ʃ ;
ш > ʃ ;   Ш > ʃ ;

# ‹Е е› is [je] word-initial or after vowels/Ъ/Ь; elsewhere [e]
(^ | $V | Ъ | ъ | Ь | ь) } Е > je ;
(^ | $V | Ъ | ъ | Ь | ь) } е > je ;
Е > e ;   е > e ;

Ё > jo ;  ё > jo ;
Ю > ju ;  ю > ju ;
Я > ja ;  я > ja ;

# --- Core letters ----------------------------------------------------------
А > a ;  а > a ;
Б > b ;  б > b ;
В > v ;  в > v ;
Г > ɡ ;  г > ɡ ;
Ғ > ʁ ;  ғ > ʁ ;                  # gʻ
Д > d ;  д > d ;
Ж > ʒ ;  ж > ʒ ;
З > z ;  з > z ;
И > i ;  и > i ;                  # see optional [ɨ] below
Й > j ;  й > j ;
К > k ;  к > k ;
Қ > q ;  қ > q ;
Л > l ;  л > l ;
М > m ;  м > m ;
Н > n ;  н > n ;
О > ɔ ;  о > ɔ ;
Ў > o ;  ў > o ;                  # oʻ (close-mid back rounded)
П > p ;  п > p ;
Р > r ;  р > r ;
С > s ;  с > s ;
Т > t ;  т > t ;
У > u ;  у > u ;
Ф > f ;  ф > f ;
Х > x ;  х > x ;
Ҳ > h ;  ҳ > h ;
Ц > t͡s ; ц > t͡s ;

# Rare/loan punctuation letters
Ъ > ʔ ;  ъ > ʔ ;                  # in loans; often marks a break
Ь > ʲ ;  ь > ʲ ;                  # palatalization marker in some loans
Э > e ;  э > e ;

# --- Optional refinements ---------------------------------------------------
# К > kʲ || _ [Е И Э е и э] ;
# Г > ɡʲ || _ [Е И Э е и э] ;
# И > ɨ  || [Қ Х Ғ] _ ;          # map ‹И› to [ɨ] after uvulars/velar fricatives

